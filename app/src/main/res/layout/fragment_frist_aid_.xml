<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/red_colour"
    tools:context=".My_Fragments.FristAid_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_local_hospital"
                android:layout_gravity="center_horizontal"
                android:layout_width="120dp"
                android:layout_height="120dp">
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@color/white_colour"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <GridLayout
        android:background="@drawable/grid_background"
        android:layout_weight="3"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/learn"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="15dp"
            android:elevation="4dp"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity=""
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="2"
                    android:layout_margin="15dp"
                    android:src="@drawable/learning"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </ImageView>
                <TextView
                    android:layout_weight="1"
                    android:text="@string/sheka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/prostoti"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="15dp"
            android:elevation="4dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_height="0dp">
            <LinearLayout
                android:gravity="center"
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:layout_margin="15dp"
                    android:src="@drawable/prepare"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </ImageView>
                <TextView
                    android:layout_weight="1"
                    android:text="@string/prostuti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/emer"
            android:layout_margin="10dp"
            android:layout_marginBottom="58dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="15dp"
            android:elevation="4dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <LinearLayout
                android:gravity="center"
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="2"
                    android:layout_margin="15dp"
                    android:src="@drawable/emerjancy"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </ImageView>
                <TextView
                    android:layout_weight="1"
                    android:text="@string/emergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/more"
            android:layout_margin="10dp"
            android:layout_marginBottom="58dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="15dp"
            android:elevation="4dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <LinearLayout
                android:weightSum="3"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="2"
                    android:layout_margin="15dp"
                    android:src="@drawable/more"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </ImageView>
                <TextView
                    android:layout_weight="1"
                    android:text="@string/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>


</LinearLayout>